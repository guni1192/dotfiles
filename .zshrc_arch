#!/usr/bin/zsh
# Default Settiing
alias e='emacs -nw'
alias emacs='emacs -nw'
alias ei='e ~/.emacs.d/init.el'
alias la='ls -a'
alias ll='ls -al'
# ArchLinux's alias of packeage manager
alias search='sudo pacman -Ss'
alias install='sudo pacman -S'
alias remove='sudo pacman -R'
alias update='sudo pacman -Syu'
alias ys='yaourt -S'
alias yr='yarout -R'
alias yrs='yaourt -Rs'

# pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

# powerline
export PYTHONPATH=/usr/lib/python3.5/site-packages

# emacsを256色で使うための設定
export TERM="xterm-256color"


bindkey -e # emacsライクなキーバインド

# capsをctrlに
setxkbmap -option "ctrl:nocaps"

if [[ -r $PYTHONPATH/powerline/bindings/zsh/powerline.zsh ]]; then
    source $PYTHONPATH/powerline/bindings/zsh/powerline.zsh
fi

source ~/.zplug/init.zsh

# ---- ここにプラグインを記述


## 256色使用可能にする
zplug "chrissicool/zsh-256color"


# プラグインを読み込み、コマンドにパスを通す
zplug load --verbose

screenfetch
