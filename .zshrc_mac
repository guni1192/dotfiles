#!/usr/bin/zsh
source $HOME/dotfiles/.zshrc_base

export TERM="xterm-256color"

export PATH="/Users/IIGUNI/.rbenv/shims:/Users/IIGUNI/.rbenv/bin:/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/texlive/2016/bin/x86_64-darwin/tlmgr:$PATH"

export PYTHON3PATH=/usr/local/lib/python3.5/site-packages
if [[ -r $PYTHON3PATH/powerline/bindings/zsh/powerline.zsh ]]; then
    powerline-daemon -q
    source $PYTHON3PATH/powerline/bindings/zsh/powerline.zsh
fi
#source $ZSH/oh-my-zsh.sh

alias tmux="tmux -2"
alias emacs="/usr/local/Cellar/emacs/25.1//Emacs.app/Contents/MacOS/Emacs -nw"
alias e="/usr/local/Cellar/emacs/25.1//Emacs.app/Contents/MacOS/Emacs -nw"

alias ei='e ~/.emacs.d/init.el'
alias python='python3'
alias pip='pip3'
# unalias ls
# unalias la
# unalias ll
alias ls='/bin/ls -hG'
alias la='/bin/ls -AGh'
alias ll='/bin/ls -AhlG'
cdls ()
{
    \cd "$@" && ls
}
alias cd='cdls'
alias grep='grep --color'
alias df='df -h'

export NVIM=$HOME/.config/nvim
alias vim='nvim'
alias n='vim'
alias ni='nvim $NVIM/init.vim'
alias nd='nvim $NVIM/dein.toml'
