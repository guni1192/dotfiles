#!/usr/bin/zsh

# powerline
export PYTHONPATH=/usr/local/lib/python3.6/site-packages
# if [[ -r $PYTHONPATH/powerline/bindings/zsh/powerline.zsh ]]; then
#    source $PYTHONPATH/powerline/bindings/zsh/powerline.zsh
# fi


source $HOME/dotfiles/.zshrc_base

export TERM="xterm-256color"

export PATH="/usr/local/sbin:/Users/IIGUNI/.rbenv/shims:/Users/IIGUNI/.rbenv/bin:/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/texlive/2016/bin/x86_64-darwin/tlmgr:$PATH"


alias tmux="tmux -2"
alias emacs="/usr/local/Cellar/emacs/25.1//Emacs.app/Contents/MacOS/Emacs -nw"
alias e="/usr/local/Cellar/emacs/25.1//Emacs.app/Contents/MacOS/Emacs -nw"

alias ei='e ~/.emacs.d/init.el'
alias python='python3'
alias pip2='pip'
alias pip='pip3'
alias ls='/bin/ls -hG'
alias la='/bin/ls -AGh'
alias ll='/bin/ls -AhlG'
cdls ()
{
    \cd "$@" && ls
}
alias cd='cdls'
alias grep='grep --color'
alias df='df -h'

export NVIM=$HOME/.config/nvim
alias vim='nvim'
alias n='vim'
alias ni='nvim $NVIM/init.vim'
alias nd='nvim $NVIM/dein.toml'

# if [[ ! -d ~/.zplug ]];then
#  git clone https://github.com/zplug/zplug ~/.zplug
# fi

source ~/.zplug/init.zsh

# zplug 'zsh-users/zsh-autosuggestions'
# zplug 'zsh-users/zsh-completions'
# zplug 'zsh-users/zsh-syntax-highlighting'
# zplug 'mollifier/anyframe'
# zplug 'dracula/zsh', as:theme
# zplug 'tylerreckart/hyperzsh', as:theme
# zplug mafredri/zsh-async, from:github
zplug sindresorhus/pure, use:pure.zsh, from:github, as:theme

# Install plugins if there are plugins that have not been installed
if ! zplug check --verbose; then
   printf "Install? [y/N]: "
   if read -q; then
       echo; zplug install
   fi
fi

zplug load --verbose

