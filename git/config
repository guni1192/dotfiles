[ghq]
    root = ~/.ghq/

[alias]
    s = status
    b = branch
    c = commit
    a = add
    d = diff
    diffs = diff --cached
    graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    co = !git branch -a | fzf | xargs git checkout

[pull]
    ff = only

[gpg]
    format = ssh

[commit]
    gpgsign = true

[include]
    path = ~/.config/git/config.local
