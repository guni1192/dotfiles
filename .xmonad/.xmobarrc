-- vim: ft=haskell
Config { font               = "xft:Migu 1M:size=13"
       , bgColor            = "#202020"
       , fgColor            = "#9cabc1"
       , position           = Bottom
       -- , position             = Static { xpos = 37 , ypos = 0, width = 1845, height = 18 }
       , lowerOnStart       = False
       -- , pickBroadest       = True
       , overrideRedirect   = False
       , border             = BottomBM 0
       , borderColor        = "#4e4e4e"
       , commands = [ Run CoreTemp       [ "--template" , "Temp: <core0>째C|<core1>째C"
                                         , "--Low"      , "70"        -- units: 째C
                                         , "--High"     , "80"        -- units: 째C
                                         , "--low"      , "darkgreen"
                                         , "--normal"   , "darkorange"
                                         , "--high"     , "darkred"
                                         ] 50
                    , Run MultiCpu       [ "-t"       , "CPU: <total0>.<total1>.<total2>.<total3>"
                                         , "-L"       , "40"
                                         , "-H"       , "85"
                                         , "-m"       , "2"
                                         , "--normal" , "#b0bdbd"
                                         , "--high"   , "#ef9a9a"
                                         ] 10
                    , Run Memory         [ "-t"       , "Memory: <usedratio>%"
                                         , "-L"       , "40"
                                         , "-H"       , "90"
                                         , "-m"       , "2"
                                         , "--normal" , "#b0bdbd"
                                         , "--high"   , "#ef9a9a"
                                         ] 10
                    , Run Battery        [] 10
                    , Run Date "%a %m/%d %H:%M" "date" 10
                    , Run DynNetwork     [ "--template" , "<dev>: <tx>kB/s|<rx>kB/s"
                                         , "--Low"      , "1000"       -- units: kB/s
                                         , "--High"     , "5000"       -- units: kB/s
                                         , "--low"      , "darkgreen"
                                         , "--normal"   , "darkorange"
                                         , "--high"     , "darkred"
                                         ] 10
                    , Run StdinReader
                    ]
       , sepChar    = "%"
       , alignSep   = "}{"
       , template   = " }{| %coretemp% | %multicpu% | %memory% | %dynnetwork% | %battery% |<fc=#4286f4> %date%</fc> "
       }
